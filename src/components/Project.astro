---
const { title, desc, tech } = Astro.props;
---

<div class="single-item">
  <h3>{title}</h3>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  <div class="mini-label-white">Tags</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip tag-chip">{techItem}</div>)}
  </div>
</div>
