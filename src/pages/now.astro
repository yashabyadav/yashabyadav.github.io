---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";

// Media data - easily updatable
const nowPageData = {
  watching: [
    {
      title: "Twin Peaks",
      status: "Season 2",
      reason: "Mysterious narrative weaving",
      posterUrl: "https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?w=300&q=80",
      color: "#6B4423"
    },
    {
      title: "Dune",
      status: "Rewatching",
      reason: "Cinematography & world design",
      posterUrl: "https://images.unsplash.com/photo-1517604931442-7e0c6f169a0d?w=300&q=80",
      color: "#8B7355"
    }
  ],
  playing: [
    {
      title: "Baldur's Gate 3",
      status: "Act 2",
      reason: "Story-driven gameplay",
      posterUrl: "https://images.unsplash.com/photo-1538481143235-b2512ed826b3?w=300&q=80",
      color: "#4A3E5E"
    },
    {
      title: "Hollow Knight",
      status: "Challenging exploration",
      reason: "Atmospheric platforming",
      posterUrl: "https://images.unsplash.com/photo-1614613535308-eb5fbd8eb4d2?w=300&q=80",
      color: "#2D2D2D"
    }
  ],
  reading: [
    {
      title: "The Three-Body Problem",
      status: "Chapter 15",
      reason: "Hard sci-fi & physics concepts",
      posterUrl: "https://images.unsplash.com/photo-1506880018603-83d5b814b5a6?w=300&q=80",
      color: "#573135"
    },
    {
      title: "Thinking, Fast and Slow",
      status: "Progress: 45%",
      reason: "Cognitive psychology insights",
      posterUrl: "https://images.unsplash.com/photo-1507842217343-583f7270bfba?w=300&q=80",
      color: "#5A6C7D"
    }
  ]
};
---

<!doctype html>
<html>
  <Header title="Now | Yashab Yadav" />
  <body>
    <div class="content">
      <Sidebar selectedItem="now" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <!-- Hero Section -->
            <div class="fold-content">
              <h1 class="heading-red">What I'm Into Now</h1>
              <p class="lead">
                A peek into my current media diet. Books, films, and games that are capturing my attention right now.
              </p>
            </div>

            <!-- Bento Grid -->
            <div class="bento-grid">
              <!-- Large Card: Currently Watching -->
              <div class="bento-card bento-card-lg">
                <div class="card-header">
                  <h3 class="heading-red">Watching</h3>
                </div>
                <div class="card-content">
                  <div class="status-list">
                    {nowPageData.watching.map((item) => (
                      <div class="status-item">
                        <div class="status-title">{item.title}</div>
                        <div class="status-meta">{item.status}</div>
                        <div class="status-reason">{item.reason}</div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Large Card: Currently Playing -->
              <div class="bento-card bento-card-lg">
                <div class="card-header">
                  <h3 class="heading-red">Playing</h3>
                </div>
                <div class="card-content">
                  <div class="status-list">
                    {nowPageData.playing.map((item) => (
                      <div class="status-item">
                        <div class="status-title">{item.title}</div>
                        <div class="status-meta">{item.status}</div>
                        <div class="status-reason">{item.reason}</div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Large Card: Currently Reading -->
              <div class="bento-card bento-card-lg">
                <div class="card-header">
                  <h3 class="heading-red">Reading</h3>
                </div>
                <div class="card-content">
                  <div class="status-list">
                    {nowPageData.reading.map((item) => (
                      <div class="status-item">
                        <div class="status-title">{item.title}</div>
                        <div class="status-meta">{item.status}</div>
                        <div class="status-reason">{item.reason}</div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>

            <!-- Poster Gallery Section -->
            <div class="poster-section">
              <h2 class="heading-red" style="margin-top: 3rem; margin-bottom: 1.5rem;">Visual Gallery</h2>
              
              <!-- Watching Posters -->
              <div class="gallery-subsection">
                <h3 class="gallery-subheading">Currently Watching</h3>
                <div class="poster-grid">
                  {nowPageData.watching.map((item) => (
                    <div class="poster-card">
                      <div class="poster-image-container" style={`--accent-color: ${item.color}`}>
                        <img 
                          src={item.posterUrl} 
                          alt={item.title}
                          class="poster-image"
                        />
                        <div class="poster-overlay"></div>
                      </div>
                      <div class="poster-info">
                        <div class="poster-title">{item.title}</div>
                        <div class="poster-subtitle">{item.reason}</div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Playing Posters -->
              <div class="gallery-subsection">
                <h3 class="gallery-subheading">Currently Playing</h3>
                <div class="poster-grid">
                  {nowPageData.playing.map((item) => (
                    <div class="poster-card">
                      <div class="poster-image-container" style={`--accent-color: ${item.color}`}>
                        <img 
                          src={item.posterUrl} 
                          alt={item.title}
                          class="poster-image"
                        />
                        <div class="poster-overlay"></div>
                      </div>
                      <div class="poster-info">
                        <div class="poster-title">{item.title}</div>
                        <div class="poster-subtitle">{item.reason}</div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Reading Posters -->
              <div class="gallery-subsection">
                <h3 class="gallery-subheading">Currently Reading</h3>
                <div class="poster-grid">
                  {nowPageData.reading.map((item) => (
                    <div class="poster-card">
                      <div class="poster-image-container" style={`--accent-color: ${item.color}`}>
                        <img 
                          src={item.posterUrl} 
                          alt={item.title}
                          class="poster-image"
                        />
                        <div class="poster-overlay"></div>
                      </div>
                      <div class="poster-info">
                        <div class="poster-title">{item.title}</div>
                        <div class="poster-subtitle">{item.reason}</div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Footer Note -->
            <div class="fold-content" style="margin-top: 3rem; border-top: 1px solid #353535; padding-top: 2rem;">
              <p class="lead" style="font-size: 14px; color: #a8a8a8;">
                Last updated: February 2025. This page is regularly updated as my media diet evolves.
              </p>
            </div>
          </main>
        </div>
      </nav>
    </div>

    <style>
      /* Bento Grid Container */
      .bento-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin: 2rem 0;
        width: 100%;
      }

      /* Bento Cards */
      .bento-card {
        background-color: rgba(53, 53, 53, 0.12);
        border: 1px solid #353535;
        border-radius: 12px;
        padding: 24px;
        backdrop-filter: blur(4px);
        transition: all 200ms ease;
        display: flex;
        flex-direction: column;
      }

      .bento-card:hover {
        border-color: #803329;
        background-color: rgba(53, 53, 53, 0.18);
        box-shadow: 0 8px 24px rgba(128, 51, 41, 0.12);
      }

      .bento-card-lg {
        min-height: 280px;
      }

      /* Card Header */
      .card-header {
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #353535;
        padding-bottom: 1rem;
      }

      .card-header h3 {
        margin: 0;
        font-size: 1.4rem;
        color: #803329;
      }

      /* Card Content */
      .card-content {
        flex: 1;
        overflow-y: auto;
      }

      /* Status List */
      .status-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .status-item {
        padding: 0;
      }

      .status-title {
        color: #D4D4CA;
        font-size: 15px;
        font-weight: 500;
        margin-bottom: 0.25rem;
        line-height: 1.4;
      }

      .status-meta {
        color: #a8a8a8;
        font-size: 13px;
        font-family: IBM Plex Mono, sans-serif;
        margin-bottom: 0.5rem;
        letter-spacing: 0.5px;
      }

      .status-reason {
        color: #808080;
        font-size: 13px;
        line-height: 1.4;
        font-style: italic;
      }

      /* Poster Section */
      .poster-section {
        margin-top: 2rem;
      }

      .gallery-subsection {
        margin-bottom: 3rem;
      }

      .gallery-subheading {
        color: #803329;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-family: IBM Plex Mono, sans-serif;
        font-weight: 500;
      }

      /* Poster Grid */
      .poster-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 20px;
      }

      /* Poster Card */
      .poster-card {
        display: flex;
        flex-direction: column;
        gap: 10px;
        cursor: pointer;
      }

      .poster-image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 3 / 4;
        border-radius: 8px;
        overflow: hidden;
        background-color: #1c1c1c;
        border: 1px solid #353535;
        transition: all 250ms ease;
      }

      .poster-image-container:hover {
        border-color: #803329;
        box-shadow: 
          0 0 20px rgba(128, 51, 41, 0.3),
          inset 0 0 0 1px rgba(128, 51, 41, 0.4);
        filter: brightness(1.15);
      }

      .poster-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 250ms ease;
      }

      .poster-image-container:hover .poster-image {
        transform: scale(1.05);
      }

      .poster-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(128, 51, 41, 0) 0%, rgba(128, 51, 41, 0.15) 100%);
        opacity: 0;
        transition: opacity 250ms ease;
      }

      .poster-image-container:hover .poster-overlay {
        opacity: 1;
      }

      /* Poster Info */
      .poster-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .poster-title {
        color: #D4D4CA;
        font-size: 13px;
        font-weight: 500;
        line-height: 1.3;
      }

      .poster-subtitle {
        color: #a8a8a8;
        font-size: 12px;
        line-height: 1.3;
      }

      /* Responsive Design */
      @media screen and (max-width: 991px) {
        .bento-grid {
          grid-template-columns: 1fr;
          gap: 20px;
        }

        .bento-card {
          min-height: 200px;
        }

        .poster-grid {
          grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
          gap: 16px;
        }
      }

      @media screen and (max-width: 767px) {
        .bento-grid {
          gap: 16px;
        }

        .bento-card {
          padding: 18px;
          border-radius: 8px;
        }

        .card-header {
          margin-bottom: 1rem;
          padding-bottom: 0.8rem;
        }

        .card-header h3 {
          font-size: 1.2rem;
        }

        .status-item {
          padding: 0.75rem 0;
        }

        .status-title {
          font-size: 14px;
        }

        .status-meta {
          font-size: 12px;
        }

        .poster-grid {
          grid-template-columns: repeat(3, 1fr);
          gap: 12px;
        }

        .gallery-subheading {
          font-size: 0.95rem;
          margin-bottom: 0.8rem;
        }

        .poster-info {
          gap: 3px;
        }

        .poster-title {
          font-size: 12px;
        }

        .poster-subtitle {
          font-size: 11px;
        }
      }

      @media screen and (max-width: 480px) {
        .poster-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 10px;
        }

        .bento-grid {
          gap: 12px;
        }
      }
    </style>
  </body>
</html>
